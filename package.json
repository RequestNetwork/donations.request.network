{
  "name": "request-donations",
  "version": "1.2.1",
  "description": "Request Donations Project",
  "license": "MIT",
  "author": "Adam Dowson <adamdowson@googlemail.com>",
  "main": "dist",
  "scripts": {
    "build": "gulp  && babel src -s -D -d dist --presets es2015,stage-0",
    "build:landing": "webpack",
    "dev": "gulp && nodemon -w src --exec \"babel-node src --presets es2015,stage-0\"",
    "prestart": "gulp && npm run -s build",
    "start": "gulp && node dist",
    "start:landing": "webpack --watch",
    "test": "eslint src",
    "format": "prettier --write 'src/*.js'"
  },
  "eslintConfig": {
    "env": {
      "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 8,
      "sourceType": "module"
    },
    "rules": {
      "no-console": 0,
      "no-unused-vars": 1
    }
  },
  "prettier": {
    "singleQuote": false
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "aws-sdk": "^2.342.0",
    "babel-polyfill": "^6.0.16",
    "body-parser": "^1.13.3",
    "compression": "^1.5.2",
    "cors": "^2.7.1",
    "data-store": "^3.1.0",
    "ejs": "^2.6.1",
    "express": "^4.13.3",
    "http-status-codes": "^1.3.0"
  },
  "devDependencies": {
    "@babel/core": "^7.1.6",
    "@fortawesome/fontawesome-free": "5.3.1",
    "babel-cli": "^6.9.0",
    "babel-core": "^6.26.3",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.0.15",
    "babel-preset-stage-0": "^6.0.15",
    "bootstrap": "4.1.3",
    "browser-sync": "2.24.7",
    "css-loader": "^1.0.0",
    "ejs-loader": "^0.3.1",
    "eslint": "^3.1.1",
    "file-loader": "^2.0.0",
    "gulp": "^3.9.1",
    "gulp-autoprefixer": "latest",
    "gulp-babel": "^8.0.0",
    "gulp-clean-css": "3.10.0",
    "gulp-csso": "^2.0.0",
    "gulp-header": "2.0.5",
    "gulp-rename": "^1.4.0",
    "gulp-sass": "4.0.1",
    "gulp-uglify": "^2.0.0",
    "html-webpack-plugin": "^3.2.0",
    "jquery": "3.5.0",
    "jquery.easing": "^1.4.1",
    "lint-staged": "^8.0.4",
    "nodemon": "^1.18.7",
    "nodemon-webpack-plugin": "^4.0.4",
    "popper.js": "^1.14.4",
    "postcss-loader": "^3.0.0",
    "prettier": "^1.15.2",
    "run-sequence": "^1.2.2",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "url-loader": "^1.1.2",
    "webpack": "^4.22.0",
    "webpack-auto-inject-version": "^1.2.2",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.10"
  }
}
