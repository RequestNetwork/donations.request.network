    <script>
        function getUrlQueryParameter(name, url) {
            if (!url) url = location.href;
            name = name.replace(/[\[]/, "\\\[").replace(/[\]]/, "\\\]");
            var regexS = "[\\?&]" + name + "=([^&#]*)";
            var regex = new RegExp(regexS);
            var results = regex.exec(url);
            return results == null ? null : results[1];
        }

        if (window.location.href.indexOf('signedRequest') != -1) {
            var toRedirect = decodeURIComponent(getUrlQueryParameter('redirect'));
            window.location.href = toRedirect;
        }
    </script>

